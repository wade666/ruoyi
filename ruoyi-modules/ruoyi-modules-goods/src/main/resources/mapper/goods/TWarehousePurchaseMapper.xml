<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.goods.mapper.TWarehousePurchaseMapper">
    
    <resultMap type="TWarehousePurchase" id="TWarehousePurchaseResult">
        <result property="id"    column="id"    />
        <result property="productId"    column="product_id"    />
        <result property="warehouseId"    column="warehouse_id"    />
        <result property="applyNum"    column="apply_num"    />
        <result property="applyPrice"    column="apply_price"    />
        <result property="applyTime"    column="apply_time"    />
        <result property="realNum"    column="real_num"    />
        <result property="applyState"    column="apply_state"    />
        <result property="remark"    column="remark"    />
        <result property="productName"    column="product_name"    />
        <result property="warehouseName"    column="warehouse_name"    />
    </resultMap>

    <sql id="selectTWarehousePurchaseVo">
        select id, product_id, warehouse_id, apply_num, apply_price, apply_time, real_num, apply_state, remark from t_warehouse_purchase
    </sql>

    <select id="selectTWarehousePurchaseList" parameterType="TWarehousePurchase" resultMap="TWarehousePurchaseResult">
        select wp.id, wp.product_id, wp.warehouse_id, wp.apply_num, wp.apply_price, wp.apply_time, wp.real_num, wp.apply_state,(case wp.apply_state when 1 then '待审核' when 2 then '通过' when 3 then '拒绝' when 4 then '完成' end) applyStateName, wp.remark,p.product_name, w.warehouse_name from t_warehouse_purchase wp
        left join t_product p on wp.product_id=p.id left join t_warehouse w on wp.warehouse_id=w.id
        <where>  
            <if test="productId != null "> and product_id = #{productId}</if>
            <if test="warehouseId != null "> and warehouse_id = #{warehouseId}</if>
            <if test="applyNum != null "> and apply_num = #{applyNum}</if>
            <if test="applyPrice != null "> and apply_price = #{applyPrice}</if>
            <if test="applyTime != null "> and apply_time = #{applyTime}</if>
            <if test="realNum != null "> and real_num = #{realNum}</if>
            <if test="applyState != null "> and apply_state = #{applyState}</if>
        </where>
    </select>
    
    <select id="selectTWarehousePurchaseById" parameterType="Long" resultMap="TWarehousePurchaseResult">
        <include refid="selectTWarehousePurchaseVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertTWarehousePurchase" parameterType="TWarehousePurchase" useGeneratedKeys="true" keyProperty="id">
        insert into t_warehouse_purchase
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="productId != null">product_id,</if>
            <if test="warehouseId != null">warehouse_id,</if>
            <if test="applyNum != null">apply_num,</if>
            <if test="applyPrice != null">apply_price,</if>
            <if test="applyTime != null">apply_time,</if>
            <if test="realNum != null">real_num,</if>
            <if test="applyState != null">apply_state,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="productId != null">#{productId},</if>
            <if test="warehouseId != null">#{warehouseId},</if>
            <if test="applyNum != null">#{applyNum},</if>
            <if test="applyPrice != null">#{applyPrice},</if>
            <if test="applyTime != null">#{applyTime},</if>
            <if test="realNum != null">#{realNum},</if>
            <if test="applyState != null">#{applyState},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateTWarehousePurchase" parameterType="TWarehousePurchase">
        update t_warehouse_purchase
        <trim prefix="SET" suffixOverrides=",">
            <if test="productId != null">product_id = #{productId},</if>
            <if test="warehouseId != null">warehouse_id = #{warehouseId},</if>
            <if test="applyNum != null">apply_num = #{applyNum},</if>
            <if test="applyPrice != null">apply_price = #{applyPrice},</if>
            <if test="applyTime != null">apply_time = #{applyTime},</if>
            <if test="realNum != null">real_num = #{realNum},</if>
            <if test="applyState != null">apply_state = #{applyState},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTWarehousePurchaseById" parameterType="Long">
        delete from t_warehouse_purchase where id = #{id}
    </delete>

    <delete id="deleteTWarehousePurchaseByIds" parameterType="String">
        delete from t_warehouse_purchase where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>